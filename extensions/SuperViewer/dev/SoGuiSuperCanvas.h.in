#ifndef SO@GUI@_SUPER_CANVAS_H
#define SO@GUI@_SUPER_CANVAS_H

#include <Inventor/@Gui@/viewers/So@Gui@Viewer.h>
#include <Inventor/nodes/SoComplexity.h>

class SoLight;

// *************************************************************************

class So@Gui@SuperCanvas : public So@Gui@Viewer {

public:

  enum ViewMode {
    INTERACT,
    EXAMINE,
    FLYMODE_NORMAL,
    FLYMODE_GLIDE,
    FLYMODE_LOCKED
  };

  enum DrawStyle {
    FILLED = 1,
    BOUNDINGBOXES,
    WIREFRAME,
    VERTICES,
    TEXTURES,
    HIDDEN_PARTS
  };

  enum WhileMoving {
    FULL_MODEL_WM,
    BOUNDINGBOXES_WM,
    ONE_BOUNDINGBOX_WM,
    NO_TEXTURES_WM
  };

public:

  So@Gui@SuperCanvas(@WIDGET@ parent,
                const char * name = NULL,
                SbBool embed = TRUE,
                Type type = BROWSER,
                SbBool build = TRUE);
  ~So@Gui@SuperCanvas();

  void setDrawStyle(DrawStyle drawstyle, SbBool enable);
  SbBool isDrawStyle(DrawStyle drawstyle) const;

  void setWhileMoving(WhileMoving how);
  SbBool isWhileMoving(WhileMoving how) const;

  void setInformation(SbBool enable);
  SbBool isInformation(void) const;

  void setDistance(SbBool enable);
  SbBool isDistance(void) const;

  void setFlatshading(SbBool enable);
  SbBool isFlatshading(void) const;

  void setAnimationEnabled(const SbBool enable);
  SbBool isAnimationEnabled(void) const;

  void setAnimating(SbBool enable);
  SbBool isAnimating(void) const;
  void stopAnimating(void);
  void setLineWidth(int value);
  int getLineWidth(void) const;

  void setPointSize(int value);
  int getPointSize(void) const;

  void setPointColor(const SbColor & color);
  SbColor & getPointColor(void) const;

  void setLineColor(const SbColor & color);
  SbColor & getLineColor(void) const;

  void setRenderType(SoComplexity::Type type);
  SbName & getRenderType(void) const;

  void setRenderQuality(float value);
  float getRenderQuality(void) const;

  void setTextureQuality(float value);
  float getTextureQuality(void) const;

  void setCamera(int index);
  int getNumCameras(void) const;

  void setLight(int index, SbBool on);
  int getNumLights(void) const;
  SoLight * getLight(int index);

  void enableMouse(SbBool enable);
  SbBool isMouseEnabled(void) const;

  virtual void setViewMode(ViewMode mode);
  virtual ViewMode getViewMode(void) const;
  virtual SbBool isViewMode(ViewMode mode) const;

  virtual void setSceneGraph(SoNode * scene);
  SoSeparator * loadSceneGraphFromFile(const char * filename);

  @WIDGET@ getRenderAreaWidget(void) const;

protected:

  virtual const char * getDefaultWidgetName(void) const;
  const char * getDefaultTitle(void) const;
  const char * getDefaultIconTitle(void) const;

  @WIDGET@ buildWidget(@WIDGET@ parent);

  virtual void actualRedraw(void);
  virtual SbBool processSoEvent(const SoEvent * const event);

private:
  class So@Gui@SuperCanvasP * pimpl;
  friend class So@Gui@SuperCanvasP;

};

// *************************************************************************

#endif // ! SO@GUI@_SUPER_CANVAS_H
